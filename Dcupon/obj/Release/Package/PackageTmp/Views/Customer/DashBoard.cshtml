
@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-md-12">
        @*<div class="page-header">
            <h1>Welcome<small class="capitalize"> @Session["Username"]</small></h1>
        </div>*@
        <br/><br />
        <div role="tabpanel">

            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist" id="myTab">
                
                <li role="presentation" class="active"><a href="#activity" aria-controls="profile" role="tab" data-toggle="tab">My Actvitiy</a></li>
                <li role="presentation" ><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Refer</a></li>
                
