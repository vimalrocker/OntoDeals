@using PagedList.Mvc;
@model PagedList.IPagedList<Dcupon.Models.DataModel>
 

    @{
        ViewBag.Title = "Coupons";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <section class="main-container col2-left-layout">
        <div class="main container">
            <div class="row">
                <section class="col-main col-sm-9 col-sm-push-3 animated">
                    @*<div class="category-title">
                        <h1>Tops &amp; Tees</h1>
                    </div>*@

                    <div class="category-products">
                        
                        <ol id="products-list" class="products-list">
                            
                            @for (int i = 0; i < Model.Count(); i++)
		  
                                  {
                                      if(i%2 !=0 || i==0)
                                      {  
                                    <li class="item odd">
                                        <div class="product-image"> <a target="_blank" href="@Model[i].RedirectUrl" title="@Model[i].Title"> <img class="small-image" src="@Model[i].ImageUrl" alt="" width="230"> </a> </div>
                                        <div class="product-shop">
                                            <h2 class="product-name"><a title=" Sample Product" target="_blank" href="@Model[i].RedirectUrl"> @Model[i].Title </a></h2>

                                            @*<div class="ratings">
                                                <div class="rating-box">
                                                    <div style="width:50%" class="rating"></div>
                                                </div>
                                                <p class="rating-links"> <a href="#">1 Review(s)</a> <span class="separator">|</span> <a href="#review-form">Add Your Review</a> </p>
                                            </div>*@
                                            <div class="desc std">
                                                <p>
                                                    @Model[i].Description
                                                </p>
                                                
                                            </div>
                                            <div class="actions">
                                                <a href="mailto:?subject=@Model[i].Title&amp;body=@Model[i].Description %20%20%0A%0AThanks%20fo%20choosing%20ontodeals.com">


                                                    <i class="fa fa-envelope" title="Mail this Coupon to Friends"></i>
                                                </a>
                                                <a href="@Model[i].RedirectUrl" class="coupon-popover" data-url="@Model[i].RedirectUrl"  data-cupon-type="@Model[i].RedirectType" data-cupon-code="@Model[i].CuponCode" data-coupon-description="@Model[i].Description" data-coupon-website="@Model[i].Website" target="_blank">View Deal </a>        
                                            </div>
                                    
                                      </div>
                                    
                                    </li>
                                      }

                                      else
                                      {

                                        <li class="item even">
                                            <div class="product-image"> <a href="@Model[i].RedirectUrl" title="Microsoft Natural Keyboard"> <img class="small-image" src="@Model[i].ImageUrl" alt="Microsoft Natural Keyboard" width="230"> </a> </div>
                                            <div class="product-shop">
                                                <h2 class="product-name"><a title=" Sample Product" href="product-detail.html"> @Model[i].Title  </a></h2>

                                                <div class="desc std">
                                                    <p>
                                                       @Model[i].Description 
                                                    
                                                    </p>
                                                </div>
                                                <div class="actions">
                                                    <a href="mailto:?subject=@Model[i].Title&amp;body=@Model[i].Description %20%20%0A%0AThanks%20fo%20choosing%20ontodeals.com">


                                                        <i class="fa fa-envelope" title="Mail this Coupon to Friends"></i>
                                                    </a>
                                                    <a href="@Model[i].RedirectUrl" class="coupon-popover" data-cupon-type="@Model[i].RedirectType" data-cupon-code="@Model[i].CuponCode" data-coupon-description="@Model[i].Description" data-coupon-website="@Model[i].Website" target="_blank">View Deal </a>        
                                                </div>

                                                </div>
                                        </li>
                                      }
                                   }
 
 
                           
                        </ol>
                    </div>

                    <div class="toolbar">

                        @*<div id="sort-by">
                <label class="left">Sort By: </label>
                <ul>
                    <li>
                        <a href="#">Position<span class="right-arrow"></span></a>
                        <ul>
                            <li><a href="#">Name</a></li>
                            <li><a href="#">Price</a></li>
                            <li><a href="#">Position</a></li>
                        </ul>
                    </li>
                </ul>
                <a class="button-asc left" href="#?dir=desc&amp;order=position" title="Set Descending Direction"><span style="color:#999;font-size:11px;" class="glyphicon glyphicon-arrow-up"></span></a>
            </div>*@
                        <div class="pager">

                            <div class="pages">
                                <label>Page:</label>
                                <ul class="pagination">
                                    @if (TempData["Page"] != null)
                                    {
                                        if (TempData["Page"] == "Coupons")
                                        {
                                            <li> @Html.PagedListPager(Model, page => Url.Action("Coupons", "Home", new { page, src = @ViewData["src"] }), new PagedListRenderOptions { LinkToFirstPageFormat = String.Format("<< First"), LinkToPreviousPageFormat = String.Format("<"), LinkToNextPageFormat = String.Format(">"), LinkToLastPageFormat = String.Format("Last >>"), MaximumPageNumbersToDisplay = 5 }) </li>
                                        }

                                        else
                                        {
                                            <li> @Html.PagedListPager(Model, page => Url.Action("Categories", "Home", new { page, src = @ViewData["src"] }), new PagedListRenderOptions { LinkToFirstPageFormat = String.Format("<< First"), LinkToPreviousPageFormat = String.Format("<"), LinkToNextPageFormat = String.Format(">"), LinkToLastPageFormat = String.Format("Last >>"), MaximumPageNumbersToDisplay = 5 }) </li>
                                        }
                                    }


                                </ul>
                            </div>
                        </div>
                    </div>

                </section>
               
                 @{Html.RenderAction("_SideBar", "Home");}
            </div>
        </div>
    </section>
  


