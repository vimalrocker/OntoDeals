    <div class="content">
        <div class="container">


            <div class="portlet">

                <h4 class="portlet-title">
                    <u>Slider Configuration</u>
                </h4>

                <div class="portlet-body">

                    <div class="col-md-5">

                     @using (Html.BeginForm("UpdateSlider", "Admin", FormMethod.Post, new { id = "UpdateSlider" }))
               {
                            <div class="form-group">
                                <label>Slider Image</label>
                                @Html.DropDownListFor(x => x.imageid, Model.Image(0), new { @class = "validate[required] form-control" })
                                
                            </div>

                            <div class="form-group">
                                <label>Slider Description</label>
                                @*<input type="text" class="form-control validate[required]" />*@
                                @Html.TextBoxFor(a => a.description, new { @class = "validate[required] form-control" })
                                @Html.HiddenFor(q=>q.id, new {@id="updateid"})
                            </div>

                            <div class="form-group">
                                <label>Slider Link</label>
                                @Html.TextBoxFor(a => a.redirectlink, new { @class = "validate[required] form-control" })
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-danger pull-right">Save</button>

                            </div>

                     }
                    </div>

                    <div class="col-md-5">
                        <table class="table">
                            <tr>
                                <th colspan="2">Sliders List</th>
                            </tr>

                            @for (int i = 0; i < Model.listsliderdetails.Count; i++)
                            {

                                
                                 <tr>
                                <td>slider @(i+1)</td>
                                <td>
                                   <i class="fa fa-edit edit-slider" title="Edit Slider" data-image="@Model.listsliderdetails[i].imageid" data-description="@Model.listsliderdetails[i].description" data-id="@Model.listsliderdetails[i].id" data-link="@Model.listsliderdetails[i].redirectlink"></i>
                                </td>

                            </tr>
                            }
                           
                           

                        </table>

                    </div>
                </div>
        


            </div>
            <!-- .content -->

        </div>

        </div>

    </div>
