    @using (Html.BeginForm("CreateCupons", "Admin", FormMethod.Post, new { id = "CreateCupons" }))
    {
        <div class="content">
            <div class="container">
                <section class="demo-section">





                    <div class="col-md-6 form-group">
                        <label for="name">Title <span class="mandatory">*</span></label>
                        @Html.TextBoxFor(m => m.Title, new { @class = "validate[required] form-control" })
                    </div> <!-- /.form-group -->


                    

                    <div class="col-md-6 form-group">
                        <label for="name">Redirect Type <span class="mandatory">*</span></label>

                       
                        @Html.DropDownListFor(x => x.RedirectType, Model.RedirectTypes, new { @class = "validate[required] form-control" })


                    </div>

                    <div class="col-md-6 form-group">
                        <label for="name">Redirect Url <span class="mandatory">*</span></label>
                        @Html.TextBoxFor(m => m.RedirectUrl, new { @class = "validate[required] form-control" })
                    </div>

                    <div class="col-md-6 form-group">
                        <label for="name">Cupon Code <span class="mandatory">*</span></label>
                        @Html.TextBoxFor(m => m.CuponCode, new { @class = "validate[required] form-control" })
                    </div> <!-- /.form-group -->
                    <div class="col-md-6 form-group">
                        <label for="name">Category <span class="mandatory">*</span></label>

                        @Html.DropDownListFor(x => x.CategoriesId, Model.Category(0), new { @class = "validate[required] form-control" ,@id="ddlCategory"})  

                    </div>


                    <div class="col-md-6 form-group">
                        <label for="name">Website Category <span class="mandatory">*</span></label>

                        @Html.DropDownListFor(x => x.WebsitesId, Model.website(0), new { @class = "validate[required] form-control" })  

                    </div>

                    <div class="col-md-6 form-group">
                        <label for="name">Select Image <span class="mandatory">*</span></label>

                        @Html.DropDownListFor(x => x.ImageurlId, Model.Image(0), new { @class = "validate[required] form-control" }) 

                    </div>
                    <div class="col-md-6 form-group">
                        <div><label for="name">Select Subcategory <span class="mandatory">*</span></label></div>

                        <div id="divsubcategory">
                            @Html.DropDownListFor(x => x.SubcategoriesID, Model.subcategoryList(0), new { @class = "validate[required] form-control" })
                        </div>
                    </div>

                    <div class="col-md-6 form-group">
                        <label for="name">Coupon Type <span class="mandatory">*</span></label>
                        @Html.DropDownListFor(x => x.CouponType, Model.CuponTypes, new { @class = "form-control" }) 
                    </div>

                    <div class="col-md-6 form-group">
                        <label for="name">Description <span class="mandatory">*</span></label>
                        @Html.TextAreaFor(m => m.Description, new { @class = "validate[required] form-control", rows = "4" })

                    </div>



                    <div class="col-md-6 form-group">
                        <button type="submit" class="btn btn-danger">Save</button>
                    </div> 
                   




                </section> 
                
                <!-- /.demo-section -->

            </div>



        </div> <!-- .content -->

    }
</div>