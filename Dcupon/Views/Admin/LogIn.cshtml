@model Dcupon.Models.AdminModel 
           
@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
 
}
<style>
    .login_wrapper {
        background: #1e5799; /* Old browsers */
        background: -moz-linear-gradient(top, #1e5799 0%, #014693 100%); /* FF3.6+ */
        background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#1e5799), color-stop(100%,#014693)); /* Chrome,Safari4+ */
        background: -webkit-linear-gradient(top, #1e5799 0%,#014693 100%); /* Chrome10+,Safari5.1+ */
        background: -o-linear-gradient(top, #1e5799 0%,#014693 100%); /* Opera 11.10+ */
        background: -ms-linear-gradient(top, #1e5799 0%,#014693 100%); /* IE10+ */
        background: linear-gradient(to bottom, #1e5799 0%,#014693 100%); /* W3C */
        filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#1e5799', endColorstr='#014693',GradientType=0 ); /* IE6-9 */
    }
</style>
 
@using (Html.BeginForm("DashBoard", "Admin", FormMethod.Post, new { id = "form" }))
{
  
     
<div class="account-wrapper">

    <div class="account-body">

        <h3>Welcome to OntoDeals</h3>
      @if (!Model.NotValidated)
      { 
        @*<h5>Please sign in to get access.</h5>*@
      }
      else
      {
          <h5>Invalid UserName or Password.</h5>
          
      }
        <form class="form account-form">

            <div class="form-group">
                <label for="login-username" class="placeholder-hidden">Username</label>
                @*<input type="text" class="form-control" id="login-username" placeholder="Username" tabindex="1" required>*@
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", required = "required ", tabindex = "1", placeholder = "Username", id = "login-username" })
            </div> <!-- /.form-group -->

            <div class="form-group">
                <label for="login-password" class="placeholder-hidden">Password</label>
                @*<input type="password" class="form-control" id="login-password" placeholder="Password" tabindex="2" required>*@
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", required = "required ", tabindex = "2", placeholder = "Password", type = "password", id = "login-password" })
            </div> <!-- /.form-group -->

            <div class="form-group clearfix">

                <div class="pull-right">
                    <small><a href="#" data-toggle="modal" data-target="#forgotpass">Forgot Password?</a></small>
                </div>
            </div> <!-- /.form-group -->

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block btn-lg" tabindex="4">
                    Signin &nbsp; <i class="fa fa-play-circle"></i>
                </button>
            </div> <!-- /.form-group -->

        </form>


    </div> <!-- /.account-body -->

    <!-- Modal -->
    <div class="modal fade" id='forgotpass' tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="false">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-body clearfix">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <div class="alert alert-danger userError" role="alert">Email is not Registerd.</div>
                    <form>
                        <div class="form-group">


                            <label>Enter you registered Email id</label>
                            <input type="text" class="validate[required,custom[email]] form-control" id="forgotemail" />
                            <br />
                            <button type="button" class="btn btn-primary pull-right forgot-pass-submit">Submit</button>

                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    <!--modal-->

</div>
} 